    <body>
        <% var numberOfPollutants = 1; %>
            <% var currentFeature = day%numberOfPollutants; %>
                <section class="jumbHeader">
                    <div class="container text-center">
                        <h1>MEET THE POLLUTANTS</h1>
                    </div>
                </section>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 text-center">
                            <h2>Featured Pollutant</h2>
                            <img src="/polluntant/card1.png" class="mx-auto d-block img-fluid"></img>
                        </div>

                        <div class="col-xl-6">
                            <div class="row">
                                <div class="col-md-12">
                                    <h2 class="text-center">Events/News</h2>
                                    <table class="table table-hover">
                                        <tbody>
                                            <% for(var i = 0; i < data.events.length; i++){ %>

                                                <tr>
                                                    <td class="align-middle">
                                                        <a href="<%= data.events[i].url %>" style="color: inherit">
                                                            <div class="row text-center">
                                                                <div class="col-md-12">
                                                                    <%= data.events[i].title %>
                                                                </div>
                                                                <div class="col-md-12">
                                                                    <%= data.events[i].date %>
                                                                </div>
                                                            </div>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="<%= data.events[i].url %>" style="color: inherit">
                                                            <%= data.events[i].description %>
                                                        </a>
                                                    </td>
                                                </tr>
                                                <% }; %>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-md-12 jumbHeader">
                                    <h2 class="text-center">Case Studies</h2>
                                    <div class="row">
                                        <% for(var i = 0; i < data.caseStudies[currentFeature].length; i++){ %>
                                            <div class="col-sm-4 py-2">
                                                <a href="<%= data.caseStudies[currentFeature][i].fileName %>" style="color: inherit">
                                                    <div class="card h-100" style="width:100%; background-color: inherit;">
                                                        <img class="card-img-top" src="<%= data.caseStudies[currentFeature][i].fileImg %>" alt="Sample Page">
                                                        <div class="card-body">
                                                            <h4 class="card-title text-center"><%= data.caseStudies[currentFeature][i].name %></h4>
                                                            <p class="card-text">
                                                                <%= data.caseStudies[currentFeature][i].description %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                            <% }; %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <h2 class="text-center">info for school</h2>
                        </div>
                        <div class="col-sm-4">
                            <button type="button" class="btn btn-primary btn-block">Poster</button>
                        </div>
                        <div class="col-sm-4">
                            <button type="button" class="btn btn-primary btn-block">Stickers</button>
                        </div>
                        <div class="col-sm-4">
